<button type="button"
        class="btn btn-primary"
        data-toggle="modal"
        data-target="#exampleModal"
        data-whatever="@getbootstrap">
  Laisser un avis <i class="fas fa-pencil-alt"></i>
</button>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Laissez votre avis</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Fermer">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for @review,
                            method: :post,
                            url: profile_reviews_path(@user) do |f| %>
          <%= f.input :content, :label => 'Votre avis'  %>
          <%= f.input :rating, :label => 'Note'   %>
          <%= f.submit "Publier", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

