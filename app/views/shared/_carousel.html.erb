<div id="carousel-flat-show" class="carousel slide" data-ride="carousel" data-interval="false">
  <div class="carousel-inner">
    <% flat.photos.each_with_index do |photo, index| %>
      <div class="carousel-item <%= 'active' if index == 0 %>">
        <%= cl_image_tag photo.key, crop: :fill %>
      </div>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carousel-flat-show" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carousel-flat-show" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
