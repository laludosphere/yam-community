<div class="background">
  <div class="container">
    <h2 class="page-h2">Bonjour <%= current_user.first_name %>,</h2>

    <div class="container">
      <div class="row">
        <div class="col-12 col-lg-7">
          <div class="card" style="height: 29rem;">
            <div class="card-body">
              <div class="dash-card-top">
                <div>
                  <%= cl_image_tag current_user.photos.first.key, class: "avatar-large", alt: "avatar-large" %>
                </div>

                <div class="card-profil-name m-3">
                  <%= current_user.first_name %></small></h1>
                  <div class="card-top-details">
                    <span class="user_type"><%= current_user.user_type %></span>
                    <% if current_user.status_verified  %>
                      <span class="status-verified">PROFIL VÉRIFIÉ</span>
                    <% else %>
                      <span class="status-not-verified">PROFIL NON VÉRIFIÉ</span>
                    <% end %>
                  </div>
                </div>
                <% if current_user.average_ratings == 0 %>
                  <div class="stars m-2 mt-4">
                    <p class="card-text mt-1">Vous n'avez pas encore d'avis</p>
                  </div>
                <% else %>
                  <%= render 'shared/stars' %>
                <% end %>
              </div>
              <div class="dash-detail-group d-flex">
                <p class="dash-detail card-text"><i class="fas fa-at card-text mr-2"></i>yann@parisien.fr</p>
                <p class="dash-detail card-text"><i class="fas fa-mobile-alt card-text mr-2"></i><%= current_user.phone_number %></p>
              </div>

              <div class="title-profile">NOTIFICATIONS</div>
              <div class="alert-message mt-2">
                <div class="last-message"><i class="far fa-envelope"></i></div>
                <p>Vous n'avez pas encore de messages !</p>
              </div>
            </div>
          </div>
        </div>

        <div class="col-12 col-lg-5">
          <div class="mt-4 mt-lg-0" id="yam-pre" style="height: 18rem;">
            <%= render 'shared/premium-proposal' %>
          </div>

          <div class="card mt-4 justify-content-center d-none d-md-block" style="height: 8rem;">
            <%=  link_to subscribe_premium_path, "data-toggle" => "modal", 'data-target' => '#premiumModal' do %>
              <%= render 'shared/create_student_file_card' %>
            <% end %>
          </div>
        </div>
      </div>
        <div>
          <h2 class="page-h2">Votre sélection d'appartements à <%= current_user.preference.city%></h2>
        </div>
        <div class="card mb-4" style="height: 4rem;">
           <%= render 'shared/preferences_card' %>
        </div>
        <div class="btn-switch">
          <label class="switch">
            <input type="checkbox">
           <!--  <span class="slider round"></span> -->
          </label>
        </div>
    </div>
  </div>
  <div class="container-fluid w-75">
    <%= render 'shared/display_flats', flats: @flats %>
  </div>
</div>
