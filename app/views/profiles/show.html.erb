<div class="background">
  <div class="container profile-container fixed-footer">
      <h2 class="page-h2">Profil de <%=  @user.name %></h2>
    <div class="container">
      <div class="row">
        <div class="col-12 col-lg-6">
          <div class="card" style="height: 28rem; height:auto;">
            <div class="card-body">
              <div class="card-top">
                <div class="avatar-bubble">
                  <%= image_tag "anonym.jpg", class: "avatar-large", alt: "avatar-large" %>
                </div>
                <div class="header-card">
                  <h2><small> <%= @user.name %></small></h2>
                      <div class="card-top-details">
                        <span class ="user_type"><%= @reviewer.user_type %></span>
                        <span class="status-verifed"><%= @reviewer.status_verified %></span>
                      </div>
                </div>
                  <%= '<i class="fas fa-star"></i>'.html_safe * @reviewer.average_ratings %>
                  <%= '<i class="far fa-star"></i>'.html_safe * ( 5- @reviewer.average_ratings) %>
              </div>
                <div >
                  <p class="title-profile">COURTE DESCRIPTION</p>
                </div>

                <div class="description">
                  <%= @reviewer.description %>
                </div>
                <div >
                  <p class="title-profile">DERNIER AVIS</p>
                </div>

                <%= render 'shared/last_review' %>
            </div>
          </div>
        </div>
        <div class="col-12 col-lg-6">
          <div class="card mt-4 mt-lg-0" id="yam-pre" style="height: 28rem; height: auto;">
            <div class="review-of d-flex justify-content-center align-items-center">
              <i class="fas fa-pencil-alt mt-3 mr-4"></i>
              <h5 class="mt-3">Avis Ã  propos de <strong><%= @user.name %></strong></h5>
            </div>
            <% @reviews.each do |review| %>
              <div class="display-flex">
                <%= image_tag "anonyme2.jpg", class: "avatar-small", alt: "avatar-small" %>
                <%= review.reviewer.name %>
                <%= '<i class="fas fa-star"></i>'.html_safe * review.rating %>
                <%= '<i class="far fa-star"></i>'.html_safe * ( 5- review.rating) %>
              </div>
              <%= review.content %>
              <hr>
            <% end %>
            <%= render "reviews/button" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>




