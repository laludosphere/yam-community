<div class="background">
  <div class="container profile-container fixed-footer">
      <h2 class="page-h2">Profil de <%=  @user.name %></h2>
    <div class="container">
      <div class="row">
        <div class="col-12 col-lg-6">
          <div class="card" style="height: 28rem;">
            <div class="card-body">
              <div class="card-top">
                <div class="avatar-bubble">
                  <%= image_tag "anonym.jpg", class: "avatar-large", alt: "avatar-large" %>
                </div>
                <div class="header-card">
                  <h2><small> <%= @reviewer.name %></small></h2>
                      <div class="card-top-details">
                        <span class ="user_type"><%= @reviewer.user_type %></span>
                        <span class="status-verifed"><%= @reviewer.status_verified %></span>
                      </div>
                </div>
                  <%= '<i class="fas fa-star"></i>'.html_safe * @reviewer.average_ratings %>
                  <%= '<i class="far fa-star"></i>'.html_safe * ( 5- @reviewer.average_ratings) %>
              </div>
                <div >
                  <p class="title-profile">COURTE DESCRIPTION</p>
                </div>

                <div class="description">
                  <%= @reviewer.description %>
                </div>
                <div >
                  <p class="title-profile">DERNIER AVIS</p>
                </div>
                <div class="description">
                  <%= @last_review.content %>
                    <div class="description-right">
                      <%= image_tag "anonyme2.jpg", class: "avatar-small", alt: "avatar-small" %>
                      <%= @reviewer.name %>
                    </div>

                </div>
                <%= link_to 'Add Reviews',  new_profile_review_path(@reviewer), class: "btn btn-primary" %>
            </div>
          </div>
        </div>
        <div class="col-12 col-lg-6">
          <div class="card mt-4 mt-lg-0" id="yam-pre" style="height: 18rem;">
            <%= render 'shared/premium-proposal' %>
          </div>
          <div class="card mt-4 justify-content-center d-none d-md-block" style="height: 8rem;">
            <div class="card-body d-flex h-100 align-items-center justify-content-center">
              <h1><i class="fas fa-cloud-download-alt"></i></h1>
              <p class="m-0">Créer mon dossier étudiant</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



