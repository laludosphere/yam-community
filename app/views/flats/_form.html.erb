<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <%= simple_form_for(flat) do |f| %>
        <div class="form-inputs">
          <%= f.input :city, label: 'votre ville' %>
          <%= f.input :flat_type, collection: ['studio', '1 chambre', '2 chambres', '3 chambres'], include_blank: false, label: 'type de bien'   %>
          <%= f.input :price_per_month, label: 'loyer' %>
          <%= f.input :address, label: 'votre adresse' %>
        </div>

        <%= f.input :photos, as: :file, input_html: { multiple: true }, label: 'ajoute une photo' %>
        <div class="form-actions">
          <%= f.button :submit, class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
