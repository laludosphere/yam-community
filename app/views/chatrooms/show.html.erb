<div class="container d-flex space-between">

  <div class="mes-messages">
    <div class="d-flex mt-4 mb-4">
      <img class= "avatar-small" src="" alt="">
      <h4>Mes messages</h4>
    </div>
    <div class="mes-chatrooms d-flex">
        <% @chatrooms.each do |chatroom| %>
          <div class="d-flex align-item-center">
            <% if current_user == chatroom.user%>
              <img class= "avatar-small" src="" alt="">
              <%=link_to chatroom.flat.user.name, chatroom_path(chatroom, anchor: "envoie") %></li>
          </div>
          <div class="d-flex center align-item-center">
            <% else %>
              <img class= "avatar-small" src="" alt="">
              <%= link_to chatroom.user.name,chatroom_path(chatroom, anchor: "envoie") %></li>
            <% end %>
          </div>
        <% end %>
    </div>
  </div>

  <div  id="messages" data-chatroom-id="<%= @chatroom.id %>">
    <% @chatroom.messages.each do |message| %>
      <% if message.user == current_user %>
       <%= render 'messages/my_message', message: message %>
      <% else %>
        <%= render 'messages/other_message', message: message %>
      <% end %>
    <% end %>
    <%= simple_form_for [ @chatroom, @message ], remote: true do |f| %>
      <%= f.input :content, label: false, placeholder: "Message ##{@chatroom.name}" %>
      <%= f.button :submit, value:"Envoyer",class: "btn-primary", id: "envoie" %>
    <% end %>
  </div>
</div>



